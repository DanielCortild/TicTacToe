<!doctype html>
<html>

  <head>
      <title>TicTacToe</title>
      <meta charset="utf-8">

      <!-- Import of external scripts -->
      <script src="javascripts/deps/tf.min.js"></script>
      <script src="javascripts/deps/jquery-3.4.1.js"></script>

      <!-- Linked files should be placed in ./public,
        but should be referenced without the ./public-->
      <link rel="icon" href="images/logo.png">

      <script src="javascripts/import_bundle.js"></script>
      <script src="javascripts/onload.js"></script>
      <script src="javascripts/onclick.js"></script>
      <script src="javascripts/moves.js"></script>
      <script src="javascripts/game.js"></script>

      <link rel="stylesheet" href="stylesheets/styles.css" type="text/css">

  </head>

  <body>

      <div class="container" id="outer">

          <div id="mainTitle">TicTacToe</div>

          <div id="options">
            <select class="clicker fullwid" id="gridsize"></select>
            <select class="clicker fullwid" id="agent"></select>

            <div id="chooser" align="center">
                <button class="clicker halfwid" id="X_chooser" onclick="XChoose()">X</button>
                <button class="clicker halfwid" id="O_chooser" onclick="OChoose()">O</button>
            </div>

            <div class="buttons">
              <button class="clicker fullwid" id="playbutton" onclick="startClick()">Play</button>
            </div>
          </div>

          <div id="gamecontainer">
            <div id="description"></div>
            <div class="buttons">
              <button class="clicker halfwid" onclick="startClick()">RePlay</button>
              <button class="clicker halfwid" onclick="reconfigClick()">ReConf</button>
            </div>
            <div id="game"></div>
          </div>

          <div id="result"></div>

      </div>

  </body>

</html>
